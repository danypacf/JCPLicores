<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JCPLicores" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/baseBlack</item>
        <item name="android:windowFullscreen">true</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="noActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TextLabel" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/baseBlack</item>
        <item name="hintTextColor">@color/baseBlue</item>
        <item name="borderRoundPercent">30</item>
        <item name="android:textSize">30sp</item>
        <item name="colorControlNormal">@color/baseBlue</item>
        <item name="colorControlActivated">@color/baseBlue</item>
        <item name="boxStrokeColor">@color/baseBlue</item>
        <item name="boxBackgroundColor">@color/white</item>
    </style>

    <style name="Rounded_EditText" parent="Theme.AppCompat">
        <item name="android:background">@drawable/round_et</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_height"> 40dp</item>
        <item name="android:layout_width">320dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/antonio_variable</item>
        <item name="android:paddingLeft">20dp</item>
    </style>
</resources>